#!/bin/sh

set -e

case "$1" in
    configure)
        ln -s /usr/share/pyshared/viri /usr/lib/python3/dist-packages/
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        rm -f /usr/lib/python3/dist-packages/viri
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

#DEBHELPER#

exit 0

