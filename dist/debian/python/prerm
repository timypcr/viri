#! /bin/sh -e
#
# prerm script for the Debian python3.1-base package.
# Written 1998 by Gregor Hoffleit <flight@debian.org>.
#

case "$1" in
    remove|upgrade)
	dpkg -L python3.1 \
	    | awk '/\.py$/ {print $0"c\n" $0"o"}' \
	    | xargs rm -f >&2
        ;;
    deconfigure)
        ;;
    failed-upgrade)
        ;;
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac


